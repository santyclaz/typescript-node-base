// For devcontainer.json docs, see:
// - https://aka.ms/devcontainer.json
// Resources:
// - https://containers.dev/guide/dockerfile
// - https://github.com/devcontainers/images/tree/main/src/javascript-node
// - https://github.com/devcontainers/images/tree/main/src/typescript-node
{
	"name": "typescript-example",

	"dockerComposeFile": [
		"../compose.yml",

		// Merge `compose.claude.yml` to include Claude Code
		// Comment this out if you want to exclude
		"./compose.claude.yml"
	],
	"service": "service",
	"workspaceFolder": "/workspace",

	// More info: https://containers.dev/features
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "true",
			"username": "node",
			"upgradePackages": "true"
		}
	},

	// Configure tool-specific properties
	"customizations": {
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode"
			]
		},
		"settings": {
			"formatOnSave": true,
			"defaultFormatter": "esbenp.prettier-vscode"
		}
	},

	// List of ports inside the container to make available locally
	"forwardPorts": [ 3000 ],

	// Command to run after the container is created
	// If Claude Code is enabled, attempt to intialize firewall
	"postCreateCommand": "command -v claude >/dev/null 2>&1 && (sudo /usr/local/bin/init-firewall.sh && printf 'Claude Code: Enabled ✔\nFirewall Init: Success ✔\n' || printf 'Claude Code: Enabled ✔\nFirewall Init: ERROR ✘\n' ) || printf 'Claude Code: Not Enabled\n'; node --version | (echo -n 'node ' && cat);",
	// This is to ensure firewall initialization is complete before moving forward
	"waitFor": "postStartCommand",

	// Set `remoteUser` to `root` to connect as root instead
	// More info: https://aka.ms/dev-containers-non-root
	"remoteUser": "node"
}
